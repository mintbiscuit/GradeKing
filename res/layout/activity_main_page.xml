<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_repeat" 
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GradeKing" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/gradeking_logo" />

    <Button
        android:id="@+id/buttonAbout"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="94dp"
        android:text="About this App" 
        android:fontFamily="sans-serif-light"
        android:background="@drawable/button_bg"
        android:padding="15dp"
        android:shadowColor="#D9AB40"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowRadius="3.0" 
        android:textColor="#636363"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonSemesterGPA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="@drawable/mainbutton_bg"
        android:padding="5dp"
        android:shadowColor="#D3CFC1"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowRadius="3.0"
        android:text="Semester GPA"
        android:textColor="#636363"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonFinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonSemesterGPA"
        android:layout_below="@+id/buttonSemesterGPA"
        android:layout_marginTop="19dp"
        android:background="@drawable/mainbutton_bg"
        android:padding="5dp"
        android:shadowColor="#D3CFC1"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowRadius="3.0"
        android:text="What Do I Need on the Final?"
        android:textColor="#636363"
        android:textSize="20sp" />

</RelativeLayout>