        android:ems="10"
        android:inputType="text"
        android:text=""
        android:width="75dp" />

    <EditText
        android:id="@+id/editHours3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editGrade3"
        android:layout_alignBottom="@+id/editGrade3"
        android:layout_alignLeft="@+id/editHours2"
        android:ems="10"
        android:inputType="number|numberDecimal"
