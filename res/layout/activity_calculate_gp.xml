        android:width="125dp" />

    <EditText
        android:id="@+id/editGrade6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editCourse6"
        android:layout_alignBottom="@+id/editCourse6"
        android:layout_alignLeft="@+id/editGrade5"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:width="75dp" />

    <EditText
        android:id="@+id/editHours6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editGrade6"
        android:layout_alignBottom="@+id/editGrade6"
        android:layout_alignLeft="@+id/editHours5"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:text=""
        android:width="75dp" />
    
    <EditText
        android:id="@+id/editCourse7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editCourse6"
        android:layout_below="@+id/editCourse6"
