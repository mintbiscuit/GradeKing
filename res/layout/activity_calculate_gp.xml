<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_repeat" 
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CalculateGPA" >

    <EditText
        android:id="@+id/editHours1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editGrade1"
        android:layout_alignBottom="@+id/editGrade1"
        android:layout_alignRight="@+id/textGpaTop"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:text=""
        android:width="75dp" />

    <TextView
        android:id="@+id/textGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textCH"
        android:layout_alignLeft="@+id/editGrade1"
        android:layout_marginLeft="12dp"
        android:text="GRADE"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editGrade1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editCourse1"
        android:layout_alignBottom="@+id/editCourse1"
        android:layout_marginRight="22dp"
        android:layout_toLeftOf="@+id/editHours1"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:width="75dp" />

    <EditText
        android:id="@+id/editCourse1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textGpaTop"
        android:layout_below="@+id/textGpaTop"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:width="125dp" >
        
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editGrade1"
        android:layout_alignLeft="@+id/editCourse1"
        android:layout_marginLeft="33dp"
        android:text="COURSE"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textCH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editHours1"
        android:layout_alignLeft="@+id/editHours1"
        android:layout_marginLeft="17dp"
        android:text="CREDIT\nHOURS"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editCourse2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editCourse1"
        android:layout_below="@+id/editCourse1"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:width="125dp" />

    <EditText
        android:id="@+id/editGrade2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editCourse2"
        android:layout_alignBottom="@+id/editCourse2"
        android:layout_alignLeft="@+id/editGrade1"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:width="75dp" />

    <EditText
        android:id="@+id/editHours2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editGrade2"
        android:layout_alignBottom="@+id/editGrade2"
        android:layout_alignLeft="@+id/editHours1"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:text=""
        android:width="75dp" />
    
     <EditText
        android:id="@+id/editCourse3"
        android:layout_width="wrap_content"
