        android:layout_alignLeft="@+id/editHours6"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:text=""
        android:width="75dp" />

    <Button
        android:id="@+id/buttonCalc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="@drawable/button_bg"
        android:text="Calculate GPA" 
        android:textSize="20sp" 
        android:textColor="#636363" 
        android:shadowColor="#D9AB40"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowRadius="3.0"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/editGrade1"
        android:src="@drawable/crown" />

    <TextView
        android:id="@+id/textGpaTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="15dp" 
        android:background="@drawable/rounded_corners" 
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:shadowColor="#E2D4A9"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowRadius="2.0"
        android:text="Please fill out the following\nand hit the button to find out\nyour GPA."
        android:textColor="#636363"
        android:textSize="18sp"
        android:fontFamily="sans-serif-light" 
        tools:ignore="HardcodedText" />

</RelativeLayout>
