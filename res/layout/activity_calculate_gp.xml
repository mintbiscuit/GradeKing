    <EditText
        android:id="@+id/editGrade4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editCourse4"
        android:layout_alignBottom="@+id/editCourse4"
        android:layout_alignLeft="@+id/editGrade3"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:width="75dp" />

    <EditText
        android:id="@+id/editHours4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editGrade4"
        android:layout_alignBottom="@+id/editGrade4"
        android:layout_alignLeft="@+id/editHours3"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:text=""
        android:width="75dp" />
    
    <EditText
        android:id="@+id/editCourse5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editCourse4"
        android:layout_below="@+id/editCourse4"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:width="125dp" />

    <EditText
        android:id="@+id/editGrade5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editCourse5"
        android:layout_alignBottom="@+id/editCourse5"
        android:layout_alignLeft="@+id/editGrade4"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:width="75dp" />

    <EditText
        android:id="@+id/editHours5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editGrade5"
        android:layout_alignBottom="@+id/editGrade5"
        android:layout_alignLeft="@+id/editHours4"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:text=""
        android:width="75dp" />
    
    <EditText
        android:id="@+id/editCourse6"
